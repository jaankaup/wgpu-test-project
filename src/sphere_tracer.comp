uint encode_color(vec4 color) {

  return ((uint(color.w * 255) & 0xffff) << 24) | // alpha
         ((uint(color.z * 255) & 0xffff) << 16) | // blue
         ((uint(color.y * 255) & 0xffff) << 8 ) | // green
         (uint(color.x * 255) & 0xffff);          // red 
}

